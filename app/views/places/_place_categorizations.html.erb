<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Categorizations

    <a data-toggle="collapse" href="#place_categorizations_new_form">
      Add categorization
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @place.categorizations.each do |categorization| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to categorization, categorization %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to categorization, method: :delete, data: { confirm: "Do you really want to delete this categorization" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="place_categorizations_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
