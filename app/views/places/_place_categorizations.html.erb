<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Categorizations

    <a data-toggle="collapse" href="#place_categorizations_new_form">
      Add categorization
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @place.categorizations.each do |categorization| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to categorization, categorization %>

        <%= link_to categorization, method: :delete, data: { confirm: "Do you really want to delete this categorization" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="place_categorizations_new_form">
        <%= render partial: "places/place_categorizations_new_form" %>
      </div>
    </div>

  </ul>
</div>
