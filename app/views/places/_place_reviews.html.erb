<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reviews

    <a data-toggle="collapse" href="#place_reviews_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @place.reviews.each do |review| %>
      <li class="list-group-item">
        <div class="media">
          <div class="media-body">
            <h5 class="mt-0 d-flex justify-content-between">
              <span><%= review.reviewer.to_s %></span>

              <span>
                <%= "â˜…" * review.rating %>
              <span>
            </h5>
            <p class="lead"><%= simple_format review.body %></p>
          </div>
        </div>
        

        <% if current_user == review.reviewer %>
          <%= link_to review, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="place_reviews_new_form">
        <%= render partial: "places/place_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
